{
    "moduleNameMapper": {
        "@modules/(.*)": "<rootDir>/src/modules/$1"
    },
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "testTimeout": 9000,
    "globalSetup": "../global-setup.ts",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
}